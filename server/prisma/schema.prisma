generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DiscardPoint {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  discardObject     String
  address           String
  city              String
  localization_lat  Decimal
  localization_long Decimal

  User         User?        @relation(fields: [userId], references: [id])
  userId       String?
  Localization Localization @relation(fields: [localization_lat, localization_long], references: [latitude, longitude])

  @@unique([localization_lat, localization_long], name: "full_localization")
  @@map("discard_points")
}

model Localization {
  latitude     Decimal
  longitude    Decimal
  discardPoint DiscardPoint?

  @@id([latitude, longitude])
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  googleId  String?  @unique
  avatarUrl String?
  createdAt DateTime @default(now())

  isCompany        Boolean        @default(false)
  collectionPoints DiscardPoint[]

  @@map("user")
}
